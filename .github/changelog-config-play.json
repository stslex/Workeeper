{
  "$schema": "https://raw.githubusercontent.com/mikepenz/release-changelog-builder-action/v4/schema.json",
  "commitMode": true,
  "fetchViaCommits": true,
  "useGitHubRestApi": true,
  "maxIssues": 200,
  "truncateMessagesAt": 140,

  "template": "{{changes}}",
  "changeTemplate": "- {{#commits}}{{message}}{{/commits}}",

  "transformers": [
    { "pattern": "^feat(\\([^)]*\\))?!?:\\s*(.*)", "target": "âœ¨ $2" },
    { "pattern": "^fix(\\([^)]*\\))?!?:\\s*(.*)", "target": "ğŸ› $2" },
    { "pattern": "^perf(\\([^)]*\\))?!?:\\s*(.*)", "target": "âš¡ $2" },
    { "pattern": "^(deps|dependencies)(\\([^)]*\\))?!?:\\s*(.*)", "target": "ğŸ“¦ $3" },
    { "pattern": "^security(\\([^)]*\\))?!?:\\s*(.*)", "target": "ğŸ”’ $2" },
    { "pattern": "^refactor(\\([^)]*\\))?!?:\\s*(.*)", "target": "â™»ï¸ $2" },
    { "pattern": "^(docs|build|ci|chore|style|test)(\\([^)]*\\))?!?:\\s*(.*)", "target": "" }
  ],

  "excludeLabels": ["ignore-for-release"],
  "includeLabels": [],
  "sort": "ASC",
  "excludeMerges": false
}

