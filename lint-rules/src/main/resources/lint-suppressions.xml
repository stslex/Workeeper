<?xml version="1.0" encoding="UTF-8"?>
<lint>
    <!-- Global suppressions for the entire project -->

    <!-- ================================ -->
    <!-- DESIGN & UI RELATED SUPPRESSIONS -->
    <!-- ================================ -->

    <!-- Icon and Resource Issues -->
    <issue id="IconDensities" severity="ignore" />
    <issue id="IconDuplicates" severity="ignore" />
    <issue id="IconLocation" severity="ignore" />
    <issue id="IconMissingDensityFolder" severity="ignore" />
    <issue id="IconExpectedSize" severity="ignore" />
    <issue id="IconLauncherShape" severity="ignore" />
    <issue id="VectorRaster" severity="ignore" />

    <!-- Typography and Text -->
    <issue id="HardcodedText" severity="ignore" />
    <issue id="MissingTranslation" severity="ignore" />
    <issue id="ExtraTranslation" severity="ignore" />
    <issue id="TypographyFractions" severity="ignore" />
    <issue id="TypographyDashes" severity="ignore" />
    <issue id="Typos" severity="ignore" />
    <issue id="SetTextI18n" severity="ignore" />

    <!-- Accessibility (can be enabled later for production) -->
    <issue id="ContentDescription" severity="ignore" />
    <issue id="LabelFor" severity="ignore" />
    <issue id="SpeakableTextPresentCheck" severity="ignore" />
    <issue id="ClickableViewAccessibility" severity="ignore" />
    <issue id="TouchTargetSizeCheck" severity="ignore" />
    <issue id="DuplicateClickableBoundsCheck" severity="ignore" />
    <issue id="KeyboardInaccessibleWidget" severity="ignore" />
    <issue id="RedundantLabel" severity="ignore" />
    <issue id="ImageContrastCheck" severity="ignore" />

    <!-- ================================ -->
    <!-- ANDROID FRAMEWORK SUPPRESSIONS -->
    <!-- ================================ -->

    <!-- Google Services -->
    <issue id="GoogleAppIndexingWarning" severity="ignore" />
    <issue id="HardcodedDebugMode" severity="ignore" />

    <!-- ================================ -->
    <!-- TEST-SPECIFIC SUPPRESSIONS -->
    <!-- ================================ -->

    <!-- Allow hardcoded text and other issues in test files -->
    <issue id="SetTextI18n">
        <ignore path="**/test/**" />
        <ignore path="**/androidTest/**" />
        <ignore path="**/commonTest/**" />
        <ignore path="**/jvmTest/**" />
        <ignore path="**/jsTest/**" />
        <ignore path="**/iosTest/**" />
    </issue>

    <issue id="HardcodedText">
        <ignore path="**/test/**" />
        <ignore path="**/androidTest/**" />
        <ignore path="**/commonTest/**" />
        <ignore path="**/jvmTest/**" />
        <ignore path="**/jsTest/**" />
        <ignore path="**/iosTest/**" />
    </issue>

    <!-- Allow magic numbers in tests -->
    <issue id="MagicNumber">
        <ignore path="**/test/**" />
        <ignore path="**/androidTest/**" />
        <ignore path="**/commonTest/**" />
        <ignore path="**/jvmTest/**" />
        <ignore path="**/jsTest/**" />
        <ignore path="**/iosTest/**" />
    </issue>

    <!-- ================================ -->
    <!-- COMPOSE SPECIFIC SUPPRESSIONS -->
    <!-- ================================ -->

    <!-- Unknown Compose lint rules (until proper compose lint is added) -->
    <issue id="UnknownIssueId">
        <ignore regexp="Compose.*" />
    </issue>

    <!-- ================================ -->
    <!-- MVI ARCHITECTURE SUPPRESSIONS -->
    <!-- ================================ -->

    <!-- Allow sealed classes without explicit modifiers in MVI -->
    <issue id="RedundantVisibilityModifierRule">
        <ignore regexp=".*State\.kt" />
        <ignore regexp=".*Action\.kt" />
        <ignore regexp=".*Event\.kt" />
    </issue>

    <!-- ================================ -->
    <!-- KOIN DI SUPPRESSIONS -->
    <!-- ================================ -->

    <!-- Allow reflection-based DI in Koin modules -->
    <issue id="UnsafeCall">
        <ignore path="**/di/**" />
        <ignore regexp=".*Module.*\.kt" />
    </issue>

    <!-- ================================ -->
    <!-- ROOM DATABASE SUPPRESSIONS -->
    <!-- ================================ -->

    <!-- Allow generated Room code issues -->
    <issue id="UnusedParameter">
        <ignore path="**/build/generated/**" />
    </issue>

    <issue id="RedundantUnitReturnType">
        <ignore path="**/build/generated/**" />
    </issue>

    <!-- ================================ -->
    <!-- BUILD SCRIPT SUPPRESSIONS -->
    <!-- ================================ -->

    <!-- Allow DSL specific patterns in build files -->
    <issue id="UnknownIssueId">
        <ignore path="**/*.gradle.kts" />
        <ignore path="**/build.gradle" />
    </issue>

    <!-- ================================ -->
    <!-- TEMPORARY SUPPRESSIONS -->
    <!-- ================================ -->
    <!-- These should be reviewed and potentially removed in the future -->

    <!-- Legacy code that will be refactored -->
    <issue id="LongMethod">
        <ignore path="**/migrations/**" />
    </issue>

    <issue id="ComplexMethod">
        <ignore path="**/migrations/**" />
    </issue>

    <!-- Third-party library integrations -->
    <issue id="TrustAllX509TrustManager">
        <ignore path="**/network/**" comment="Development only - should be removed in production" />
    </issue>

    <!-- ================================ -->
    <!-- MODULE-SPECIFIC SUPPRESSIONS -->
    <!-- ================================ -->

    <!-- Core module exceptions -->
    <issue id="LibraryEntitiesShouldNotBePublic">
        <ignore path="**/core/**" comment="Core modules need public APIs" />
    </issue>

    <!-- Feature module exceptions -->
    <issue id="TooManyFunctions">
        <ignore path="**/feature/**/ui/**" comment="UI composables can have many functions" />
    </issue>

    <!-- App module exceptions -->
    <issue id="LargeClass">
        <ignore path="**/MainActivity.kt" comment="Main activity coordinates multiple features" />
    </issue>

    <!-- ================================ -->
    <!-- PERFORMANCE RELATED -->
    <!-- ================================ -->

    <!-- Allow certain patterns in preview composables -->
    <issue id="PreviewPublic">
        <ignore regexp=".*Preview.*\.kt" />
    </issue>

    <!-- ================================ -->
    <!-- CUSTOM RULES SUPPRESSIONS -->
    <!-- ================================ -->

    <!-- MVI custom rules exceptions -->
    <issue id="MviStateImmutabilityRule">
        <!-- Allow mutable state in specific cases -->
        <ignore path="**/test/**" />
        <ignore regexp=".*TestState\.kt" />
    </issue>

    <issue id="MviActionNamingRule">
        <!-- Legacy actions that haven't been renamed yet -->
        <ignore path="**/legacy/**" />
    </issue>

    <issue id="ComposableStateRule">
        <!-- Simple composables don't need state parameters -->
        <ignore regexp=".*Item\.kt" />
        <ignore regexp=".*Button\.kt" />
        <ignore regexp=".*Icon\.kt" />
    </issue>
</lint>